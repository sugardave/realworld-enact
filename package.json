{
	"name": "realworld-enact",
	"version": "0.0.1",
	"description": "RealWorld frontend implemented with the Enact framework.",
	"author": "Dave Freeman <sugardave@gmail.com>",
	"main": "src/index.js",
	"scripts": {
		"serve": "enact serve",
		"pack": "enact pack",
		"pack-p": "enact pack -p",
		"watch": "enact pack --watch",
		"clean": "enact clean",
		"lint": "enact lint --framework",
		"license": "enact license",
		"test": "enact test start --single-run",
		"test-watch": "enact test start"
	},
	"license": "UNLICENSED",
	"private": true,
	"repository": "",
	"eslintConfig": {
		"extends": [
			"enact/strict",
			"plugin:prettier/recommended",
			"prettier/react"
		],
		"plugins": [
			"react-hooks"
		],
		"rules": {
			"react-hooks/exhaustive-deps": "warn",
			"react-hooks/rules-of-hooks": "error"
		}
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": false,
		"semi": true,
		"singleQuote": true,
		"useTabs": true
	},
	"eslintIgnore": [
		"node_modules/*",
		"build/*",
		"dist/*"
	],
	"enact": {
		"template": "html-template.ejs",
		"title": "Conduit"
	},
	"dependencies": {
		"@enact/agate": "git+https://github.com/enactjs/agate.git",
		"@enact/core": "^3.1.2",
		"@enact/i18n": "^3.1.2",
		"@enact/ui": "^3.1.2",
		"ilib": "^14.2.0",
		"immer": "^4.0.1",
		"prop-types": "^15.6.2",
		"ramda": "^0.26.1",
		"react": "^16.8.0",
		"react-dom": "^16.8.0",
		"react-router-config": "^5.1.1",
		"react-router-dom": "^5.1.2"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.3",
		"eslint": "^6.5.1",
		"eslint-config-enact": "^1.5.0",
		"eslint-config-prettier": "^6.4.0",
		"eslint-plugin-babel": "^5.3.0",
		"eslint-plugin-enact": "^0.1.3",
		"eslint-plugin-jest": "^22.17.0",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-react": "^7.16.0",
		"eslint-plugin-react-hooks": "^2.1.2",
		"prettier": "1.18.2"
	}
}
